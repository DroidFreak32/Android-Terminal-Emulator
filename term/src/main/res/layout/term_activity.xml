<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:orientation="vertical" >

    <com.offsec.nhterm.TermViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/view_flipper"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:background="@android:color/black"
        android:layout_height="0dp" />

    <HorizontalScrollView
        android:id="@+id/view_function_bar"
        android:background="@android:color/black"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TableLayout
            android:id="@+id/view_function_bar_keys"
            android:background="@color/primary_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <!-- ROW 1 -->
            <Button
                android:id="@+id/button_esc"
                android:background="@color/primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="35sp"
                android:minWidth="60sp"
                android:text="Esc"/>

            <Button
                android:id="@+id/button_vim_paste"
                android:background="@color/primary"
                android:drawableRight="@drawable/ic_content_paste_white_24dp"
                android:drawableEnd="@drawable/ic_content_paste_white_24dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:minHeight="35sp"
                android:minWidth="60sp"
                android:text="VIM"/>
            <Button
                android:id="@+id/button_slash"
                android:background="@color/primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="35sp"
                android:minWidth="60sp"
                android:text="/"/>
            <Button
                android:id="@+id/button_home"
                android:background="@color/primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="35sp"
                android:minWidth="60sp"
                android:text="HOME" />
            <Button
                android:id="@+id/button_up"
                android:background="@color/primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="35sp"
                android:minWidth="60sp"
                android:text="▲" />
            <Button
                android:id="@+id/button_end"
                android:background="@color/primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="35sp"
                android:minWidth="60sp"
                android:text="END" />
            <Button
                android:id="@+id/button_pageup"
                android:background="@color/primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="35sp"
                android:minWidth="60sp"
                android:text="PGUP" />
            <Button
                android:id="@+id/button_pipe"
                android:background="@color/primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="35sp"
                android:minWidth="60sp"
                android:text="|"/>
            <Button
                android:id="@+id/button_minus"
                android:background="@color/primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="35sp"
                android:minWidth="60sp"
                android:text="-"/>
            <Button
                android:id="@+id/button_asterisk"
                android:background="@color/primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="35sp"
                android:minWidth="60sp"
                android:text="*"/>
            <Button
                android:id="@+id/button_backspace"
                android:background="@color/primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="35sp"
                android:minWidth="60sp"
                android:text="BS"/>
        </TableRow>

            <!-- ROW 2 -->

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <Button
                android:id="@+id/button_tab"
                android:background="@color/primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="35sp"
                android:minWidth="60sp"
                android:text="Tab"/>
            <Button
                android:id="@+id/button_ctrl"
                android:background="@color/primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="35sp"
                android:minWidth="60sp"
                android:text="Ctrl"/>
            <Button
                android:id="@+id/button_alt"
                android:background="@color/primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="35sp"
                android:minWidth="60sp"
                android:text="Alt"/>

            <Button
                android:id="@+id/button_left"
                android:background="@color/primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="35sp"
                android:minWidth="60sp"
                android:text="◀"/>
            <Button
                android:id="@+id/button_down"
                android:background="@color/primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="35sp"
                android:minWidth="60sp"
                android:text="▼"/>
            <Button
                android:id="@+id/button_right"
                android:background="@color/primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="35sp"
                android:minWidth="60sp"
                android:text="▶"/>
            <Button
                android:id="@+id/button_pagedown"
                android:background="@color/primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="35sp"
                android:minWidth="60sp"
                android:text="PGDN" />
            <Button
                android:id="@+id/button_enter"
                android:background="@color/primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="35sp"
                android:minWidth="60sp"
                android:text="⏎"/>
            <Button
                android:id="@+id/button_i"
                android:background="@color/primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="35sp"
                android:minWidth="60sp"
                android:text="i"/>
            <Button
                android:id="@+id/button_colon"
                android:background="@color/primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="35sp"
                android:minWidth="60sp"
                android:text=":"/>
            <Button
                android:id="@+id/button_equal"
                android:background="@color/primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="35sp"
                android:minWidth="60sp"
                android:text="="/>
            <Button
                android:id="@+id/button_vim_yank"
                android:background="@color/primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="35sp"
                android:minWidth="60sp"
                android:text="&quot;*yy"/>
            <Button
                android:id="@+id/button_menu_plus"
                android:background="@color/primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="35sp"
                android:minWidth="60sp"
                android:text="[＋]"/>
            <Button
                android:id="@+id/button_menu_minus"
                android:background="@color/primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="35sp"
                android:minWidth="60sp"
                android:text="[－]"/>
            <Button
                android:id="@+id/button_menu_x"
                android:background="@color/primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="35sp"
                android:minWidth="60sp"
                android:text="[×]"/>
            <Button
                android:id="@+id/button_menu_user"
                android:background="@color/primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="35sp"
                android:minWidth="60sp"
                android:text="[？]"/>
            <Button
                android:id="@+id/button_menu_quit"
                android:background="@color/primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="35sp"
                android:minWidth="60sp"
                android:text="[Q]"/>
            <Button
                android:id="@+id/button_softkeyboard"
                android:background="@color/primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="35sp"
                android:minWidth="60sp"
                android:text="◇"/>
            <Button
                android:id="@+id/button_menu"
                android:background="@color/primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="35sp"
                android:minWidth="60sp"
                android:text="≡"/>
            <Button
                android:id="@+id/button_menu_hide"
                android:background="@color/primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="35sp"
                android:minWidth="60sp"
                android:text="∇"/>
        </TableRow>
        </TableLayout>
    </HorizontalScrollView>
</LinearLayout>
